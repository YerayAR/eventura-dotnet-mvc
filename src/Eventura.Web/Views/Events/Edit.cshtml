@model Eventura.Web.Models.EventFormViewModel
@{
    ViewData["Title"] = "Crear evento";
}
<h1>Crear evento</h1>
<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>

    <label asp-for="Description"></label>
    <textarea asp-for="Description"></textarea>
    <span asp-validation-for="Description"></span>

    <label asp-for="StartDateTime"></label>
    <input asp-for="StartDateTime" type="datetime-local" />
    <span asp-validation-for="StartDateTime"></span>

    <label asp-for="DurationMinutes"></label>
    <input asp-for="DurationMinutes" type="number" />
    <span asp-validation-for="DurationMinutes"></span>

    <label asp-for="City"></label>
    <input asp-for="City" />
    <span asp-validation-for="City"></span>

    <label asp-for="AddressLine"></label>
    <input asp-for="AddressLine" />
    <span asp-validation-for="AddressLine"></span>

    <label asp-for="Capacity"></label>
    <input asp-for="Capacity" type="number" />
    <span asp-validation-for="Capacity"></span>

    <label asp-for="Category"></label>
    <select asp-for="Category" asp-items="Html.GetEnumSelectList<Eventura.Domain.Enums.EventCategory>()"></select>

    <button type="submit">Guardar</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
